{% extends 'base.html.twig' %}

{% block title %}Régions à Découvrir{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
     .long-col {
        min-width: 300px;
    }
</style>

<div class="example-wrapper">
    <h1>Régions à découvrir</h1>
    <div>
        <a href="{{ path('add_region') }}"><button type="button" class="btn btn-outline-primary">Ajouter une région</button></a>
    </div>
    <br>

    <div class="mb-3">
        <table>
            <tr>
                <th class="long-col"></th>
                <th></th>
            </tr>
            {% for region in regions %}
            <tr>
                <td class="long-col">
                    <a href="{{ path('parcours_region', {'id': region.id}) }}">{{ region.name }}</a>
                </td>
                <td>
                    <a href="{{ path('update_region', { 'id': region.id }) }}"><button type="button" class="btn btn-outline-warning">Modifier</button></a>
                </td>
                <td>
                    <a href="{{ path('update_region', { 'id': region.id }) }}"><button type="button" class="btn btn-outline-danger">Supprimer</button></a>
                </td>
            <tr>
            {% endfor %}
        </table>
    </div>  

</div>
{% endblock %}